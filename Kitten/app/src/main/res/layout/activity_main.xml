<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="60dp"
    android:paddingRight="60dp">

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_logomark"/>
    <ImageView
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/font_size_normal"
        android:text="Kitten is a show and\ntell community for developers"/>
  </LinearLayout>

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnGithub"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_github"
        android:height="46dp"
        android:textSize="@dimen/font_size_btn"
        android:layout_marginBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:background="@drawable/btn_normal_black"
        style="?android:attr/borderlessButtonStyle"
        android:text="Sign in use Github"/>

    <Button
      android:id="@+id/btnLoginTo"
      android:textAllCaps="false"
      android:layout_marginBottom="10dp"
      android:height="46dp"
      android:textSize="@dimen/font_size_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/btn_normal_gray"
      style="?android:attr/borderlessButtonStyle"
      android:text="Sign in"/>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center">
      <View
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="1px"
          android:background="@color/colorLightGray" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="top"
          android:layout_margin="5dp"
          android:textColor="@color/colorLightGray"
          android:text="or"/>
      <View
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="1px"
          android:background="@color/colorLightGray" />
    </LinearLayout>


    <Button
      android:id="@+id/btnRegisterTo"
      android:textAllCaps="false"
      android:textColor="#fff"
      android:height="46dp"
      android:textSize="@dimen/font_size_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/btn_normal"
      style="?android:attr/borderlessButtonStyle"
      android:text="Sign Up"/>


  </LinearLayout>


</LinearLayout>